<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/media_poster"
        android:layout_width="120dp"
        android:layout_height="184dp"
        tools:src="@drawable/app_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/media_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        style="@style/TextAppearance.AppCompat.Headline"
        tools:text="The Hobbit and its very long text "
        android:layout_marginTop="9dp"
        android:maxLines="2"
        android:maxWidth="120dp"
        app:layout_constraintTop_toBottomOf="@+id/media_poster"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/media_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/media_title"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/media_title" />

    <TextView
        android:id="@+id/media_release_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        tools:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/media_rating"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintLeft_toRightOf="@+id/media_rating"
        app:layout_constraintRight_toRightOf="@+id/media_poster"
        app:layout_constraintTop_toTopOf="@+id/media_rating"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>