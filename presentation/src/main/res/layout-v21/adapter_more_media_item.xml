<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.popularmovies.vpaliy.popularmoviesapp.ui.view.RoundedImageView
        android:id="@+id/media_poster"
        android:scaleType="centerCrop"
        android:transitionName="@string/movie_image"
        tools:src="@drawable/kong_poster"
        android:layout_width="140dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/media_title"
        tools:text="Kink Kong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toRightOf="@+id/media_poster"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/media_ratings"
        tools:text="9.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/media_release_year"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/media_release_year" />

    <TextView
        android:id="@+id/media_release_year"
        tools:text="2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/media_title"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/media_title" />
</android.support.constraint.ConstraintLayout>